{% extends "layout.twig" %}

{% block title %}
Login
{% endblock %}

{% block body %}
<section class="hero is-small is-link mb-4">
  <div class="hero-body">
    <div class="container">
      <p class="title">
        Login
      </p>
    </div>
  </div>
</section>
<div class="container">
  <form action="/login" method="POST">
    <div class="field">
      <label class="label" for="email">Email</label>
      <div class="control">
        <input class="input" type="email" id="email" name="email" required="required">
      </div>
    </div>
    <div class="field">
      <label class="label" for="password">Password</label>
      <div class="control">
        <input class="input" type="password" id="password" name="password" required="required">
      </div>
    </div>
    <div class="field">
      <div class="control">
        <button class="button is-link">Login</button>
      </div>
    </div>
  </form>
</div>
{% endblock %}
